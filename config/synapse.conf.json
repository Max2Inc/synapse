{
  "services": {
    "mysql": {
      "discovery": {
        "method": "zookeeper",
        "path": "/nerve/services/mysql/services",
        "hosts": [
          "localhost:2181"
        ]
      },
      "backup": {
        "cron": "0 8 * * *",
        "cron_conf_file": "/Users/Ray/Workspace/smartstack/synapse/mysql-backup",
        "backup_conf_file": "/Users/Ray/Workspace/smartstack/synapse/mysql.rb",
        "gzip": true
      },
      "haproxy": {
        "port": 3213,
        "server_options": "check inter 2s rise 3 fall 2",
        "bind_options": "ssl no-sslv3 crt /path/to/cert/example.pem ciphers ECDHE-ECDSA-CHACHA20-POLY1305",
        "listen": [
          "mode http",
          "option httpchk /health",
          "http-check expect string OK"
        ]
      }
    }
  },
  "backup": {
    "run_command": "backup perform",
    "config_file": "/etc/backup/config.rb",
    "do_writes": true,
    "do_crons": true
  }
}
